<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/postViewUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="username"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/postViewImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/add_btn"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/postViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post title goes here."
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/postViewDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Description goes here."
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/likeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_thumbsup"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/postRemoveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
